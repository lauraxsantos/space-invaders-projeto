import pygame
from sys import exit


class Jogador(pygame.sprite.Sprite):
    def __init__(self, pos):
        pygame.sprite.Sprite.__init__(self)
        self.image = pygame.image.load("spritesss/pngegg.png")
        self.image = pygame.transform.scale(self.image, (739 / 18, 542 / 18))
        self.rect = self.image.get_rect(midbottom=pos)
        self.velocidade = 5

    def teclas(self):
        if self.rect.right >= 680:
            pass
        else:
            if pygame.key.get_pressed()[pygame.K_RIGHT]:
                self.rect.x += self.velocidade
        if self.rect.x <= 0:
            pass
        else:
            if pygame.key.get_pressed()[pygame.K_LEFT]:
                self.rect.x -= self.velocidade

    def update(self):
        self.teclas()


pygame.init()

largura = 680
altura = 440
tela = pygame.display.set_mode((largura, altura))
relogio = pygame.time.Clock()


# chamar a função/sprite jogador
jog = Jogador((largura / 2, altura - 20))
spritejog = pygame.sprite.Group(jog)

while True:
    tela.fill((255, 255, 255))
    relogio.tick(29)

    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            pygame.quit()
            exit()

    spritejog.draw(tela)
    spritejog.update()

    pygame.display.update()
